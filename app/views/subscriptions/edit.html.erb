<div class="p-6 w-11/12 md:w-8/12 mx-auto mt-8">
  <div class="flex justify-between items-center mb-4">
    <%= link_to 'Cancel', subscription_path(@subscription), class: 'bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>
  </div>
  <div class="flex items-center justify-between mb-2">
    <h1 class="text-2xl font-bold mb-2">Edit Subscription</h1>
  </div>
  <%= form_with model: @subscription, local: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :name, class: "block text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.label :price, class: "block text-gray-700" %>
      <%= form.text_field :price, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.label :billing_frequency, class: "block text-gray-700" %>
      <%= form.select :billing_frequency, options_for_select(['monthly', 'annual'], @subscription.billing_frequency), class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.label :started_at, class: "block text-gray-700" %>
      <%= form.date_select :started_at, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= form.label :expires_at, class: "block text-gray-700" %>
      <%= form.date_select :expires_at, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    </div>
    <div class="flex justify-end border-t border-gray-200 pt-2">
      <%= form.submit "Update Subscription", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>
