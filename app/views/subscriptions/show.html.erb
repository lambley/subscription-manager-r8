<div class="p-6 w-11/12 md:w-6/12 mx-auto mt-8">
  <div class="flex justify-between items-center mb-4">
    <%= link_to 'Back to Subscriptions', subscriptions_path, class: 'bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>
  </div>
  <div class="flex items-center justify-between mb-2">
    <h1 class="text-2xl font-bold mb-2"><%= @subscription.name %></h1>
    <%= add_is_active_badge(@subscription.active?) %>
  </div>
  <p class="text-gray-700 mb-2">Price: <%= @subscription.price %></p>
  <p class="text-gray-700 mb-2">Billing Frequency: <%= @subscription.billing_frequency.titleize %></p>
  <p class="text-gray-700 mb-2">Started At: <%= format_date(@subscription.started_at) %></p>
  <p class="text-gray-700 mb-2">Expires At: <%= format_date(@subscription.expires_at) %></p>
  <div class="flex justify-end border-t border-gray-200 pt-2">
    <%= link_to 'Edit Subscription', edit_subscription_path(@subscription), class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
  </div>
</div>
