<div class="flex flex-col items-center bg-gray-100 min-h-screen py-8">
  <h1 class="text-4xl font-bold mb-8">Your Subscriptions</h1>
  <div class="w-11/12 md:w-9/12 flex justify-between mb-8">
    <%= form_with url: subscriptions_path, method: :get, local: true do %>
      <div class="flex items-center">
        <input type="text" name="search" placeholder="Search subscriptions..." class="px-4 py-2 border rounded-lg mr-4">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Search</button>
      </div>
    <% end %>
    <%= link_to 'Add New', new_subscription_path, class: 'bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600' %>
  </div>
  <div class="w-11/12 md:w-9/12 grid grid-cols-1 gap-8">
    <% @subscriptions.each do |subscription| %>
      <div class="flex justify-center">
        <%= render partial: 'subscription_card', locals: { subscription: subscription } %>
      </div>
    <% end %>
  </div>
</div>
