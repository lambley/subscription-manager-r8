<nav class="bg-main-800 p-4">
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex items-center space-x-4">
      <%= link_to "Home", root_path, class: "text-black-500 hover:text-gray-500" %>
      <%= link_to "Subscriptions", subscriptions_path, class: "text-black-500 hover:text-gray-500" %>
    </div>
    <div class="flex items-center space-x-4">
      <% if authenticated? %>
        <%= render_button(
          text: 'Log out',
          link: session_path,
          button_type: 'button_to',
          method: :delete,
          bg_class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600',
        ) %>
      <% else %>
        <%= render_button(
          text: 'Log in',
          link: new_session_path,
          button_type: 'button_to',
          method: :get
        ) %>
      <% end %>
    </div>
  </div>
</nav>
