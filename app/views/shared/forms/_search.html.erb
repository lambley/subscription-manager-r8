<%= form_with url: search_url, method: :get, local: true, data: { controller: "search", action: "ajax:success->search#update" } do %>
  <div class="flex items-center relative w-full">
    <input
      type="text" name="search" placeholder="Search <%= object_name %>..." class="px-4 py-2 border rounded-lg mr-4 pl-10 w-full" id="search" data-search-target="input">
      <i class="fa-solid fa-magnifying-glass absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
    </div>
  <% end %>
